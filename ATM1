#include<stdio.h>

struct Account
{
	char name[100];
	char idCard[19];
	char tel[12];
	char username[100];
	char password[7];

	float money;
};
typedef struct Account Account;

void signUpe()
{
	Account a;
	printf("please Input name:\n");
	scanf("%s",a.name);

	printf("please Input Idcard:\n");
	scanf("%s",a.idCard);

	printf("please Input telephone:\n");
	scanf("%s",a.tel);

	printf("please Input username:\n");
	scanf("%s",a.username);

	printf("please Input password:\n");
	scanf("%s",a.password);

	a.money=0.0f;
}
void signUpc()
{
	Account a;
	printf("请输入姓名:\n");
	scanf("%s",a.name);

	printf("请输入身份证:\n");
	scanf("%s",a.idCard);

	printf("请输入电话:\n");
	scanf("%s",a.tel);

	printf("请输入账号:\n");
	scanf("%s",a.username);

	printf("请输入密码:\n");
	scanf("%s",a.password);

	a.money=0.0f;
}

void signIn()
{

}

void showMenuc()
{
	printf("开户，按1\n");
	printf("登录，按2\n");
	int n;
	scanf("%d",&n);

	if(n==1)
	{
		signUpc();
	}
	else if(n==2)
	{
		signIn();
	}
}
void showMenue()
{
	printf("signUp，press 1\n");
	printf("signin，press 2\n");
	int n;
	scanf("%d",&n);
	if(n==1)
	{
		signUpe();
	}
	else if(n==2)
	{
		signIn();
	}
}

int main()
{
	printf("欢迎使用XXX银行\n");
	printf("Welcome to XXX bank\n");

	int language;
	printf("中文，按1\n");
	printf("English, Press 2\n");
	scanf("%d",&language);
	if(language==1)
	{
		showMenuc();
	}
	else if(language==2)
	{
		showMenue();
	}


	return 0;
}
